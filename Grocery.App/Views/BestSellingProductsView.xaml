<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             xmlns:m="clr-namespace:Grocery.Core.Models;assembly=Grocery.Core"
             x:Class="Grocery.App.Views.BestSellingProductsView"
             x:DataType="vm:BestSellingProductsViewModel"
             Title="BestSellingProductsView">
    <Shell.TitleView>
        <Grid>
            <Label Text="Best verkochte producten" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>

    <Border Stroke="#C49B33" StrokeThickness="4" Padding="10" Margin="10" HorizontalOptions="Center">

        <CollectionView ItemsSource="{Binding Products}" Margin="20" HorizontalOptions="Center">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
            </CollectionView.ItemsLayout>
            <!-- Table Header -->
            <CollectionView.Header>
                <Grid Padding="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="Rank" Grid.Column="0" FontAttributes="Bold" HorizontalOptions="Center" />
                    <Label Text="Product" Grid.Column="1" FontAttributes="Bold" HorizontalOptions="Center" />
                    <Label Text="Verkocht" Grid.Column="2" FontAttributes="Bold" HorizontalOptions="Center" />
                    <Label Text="Stock" Grid.Column="3" FontAttributes="Bold" HorizontalOptions="Center" />
                </Grid>
            </CollectionView.Header>

            <!-- Table Rows -->
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="m:BestSellingProducts">
                    <Grid Padding="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label Text="{Binding Ranking}" Grid.Column="0" HorizontalOptions="Center" />
                        <Label Text="{Binding Name}" Grid.Column="1" HorizontalOptions="Center" />
                        <Label Text="{Binding NrOfSells}" Grid.Column="2" HorizontalOptions="Center" />
                        <Label Text="{Binding Stock}" Grid.Column="3" HorizontalOptions="Center" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Border>
</ContentPage>